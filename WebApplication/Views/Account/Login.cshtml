@model LoginViewModel;

@{
    ViewBag.Title = "Login Employee";
}

<form method="post">


    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <input asp-for="Email" placeholder="Email" class="from-control" />
        <span asp-validation-for="Email" class="text-danger"> Enter ur Email</span>
    </div>

    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <input asp-for="Password" placeholder="Password" class="from-control" />
        <span asp-validation-for="Password" class="text-danger"> Enter ur Password</span>
    </div>

    <div class="form-group row">
        <label asp-for="RememberMe" class="col-sm-2 col-form-label"></label>
        <input type="checkbox" asp-for="RememberMe" class="from-control" value="true" />
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    !
    <button class="bg-primary btn" type="submit">Login</button>

</form>
